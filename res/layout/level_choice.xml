    <ImageView
        android:id="@+id/level_choice_tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:layout_marginTop="@dimen/layout_marginTop_general"
        android:gravity="center"
        android:src="@drawable/logo_game" />

    <LinearLayout
        android:id="@+id/level_choice_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/level_choice_tv_logo"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/level_choice_rl_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/level_choice_tv_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:background="@null"
                android:gravity="left"
                android:text="EASY"
                android:textColor="#eaeaea"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/level_choice_img_box_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.5"
                android:contentDescription="@null"
                android:src="@drawable/img_check_box" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_choice_rl_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/level_choice_tv_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:background="@null"
                android:gravity="left"
                android:text="MEDIUM"
                android:textColor="#eaeaea"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/level_choice_img_box_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="0.5"
                android:contentDescription="@null"
                android:src="@drawable/img_check_box" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_choice_rl_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/level_choice_tv_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:background="@null"
                android:gravity="left"
                android:text="HARD"
                android:textColor="#eaeaea"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/level_choice_img_box_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.5"
                android:contentDescription="@null"
                android:src="@drawable/img_check_box" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unlimited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/tv_unlimited"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:background="@null"
                android:gravity="left"
                android:text="UNLIMITED"
                android:textColor="#eaeaea"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/img_unlimited"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.5"
                android:contentDescription="@null"
                android:src="@drawable/img_check_box" />
        </LinearLayout>

    </LinearLayout>

